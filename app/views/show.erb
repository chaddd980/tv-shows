<h1><%= @show.title %></h1>
<% end_year = ""%>
<% if @show.ending_year.nil? %>
<% end_year = "Still Running"%>
<% else end_year = @show.ending_year%>
<% end %>
<dl>
  <dt>Network:</dt>
  <dd><%= @show.network %></dd>
  <dt>Years:</dt>
  <dd><%= @show.starting_year %> - <%= end_year %></dd>
  <dt>Genre:</dt>
  <dd><%= @show.genre %></dd>
</dl>

<p><%= @show.synopsis %></p>

